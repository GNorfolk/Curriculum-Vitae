{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "token": "{{user `token`}}",
      "region": "eu-west-1",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "packer-cv-{{timestamp}}",
      "ssh_keypair_name": "packer-keypair",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-*",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "ls"
    }
  ]
}
